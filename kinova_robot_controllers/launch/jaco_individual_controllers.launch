<launch>
    <node   name="jaco2_arm"
             pkg="kinova_ros_ctrl"
            type="kinova_node"
          output="screen"
    >
        <rosparam>
            period: 0.010   # 100 Hz
            w_skip:    20`  #   5 Hz (write cycle)
        </rosparam>
    </node>

    <include file="$(find kinova_description)/launch/upload_jaco2.launch"/>

    <rosparam>
        joint_state_controller:
            type:         joint_state_controller/JointStateController
            publish_rate: 50
        # Individual controllers (for testing purposes):
        j1_pos_controller:
            type:         position_controllers/JointPositionController
            joint:        jaco2_joint_1
        j2_pos_controller:
            type:         position_controllers/JointPositionController
            joint:        jaco2_joint_2
        j3_pos_controller:
            type:         position_controllers/JointPositionController
            joint:        jaco2_joint_3
        j4_pos_controller:
            type:         position_controllers/JointPositionController
            joint:        jaco2_joint_4
        j5_pos_controller:
            type:         position_controllers/JointPositionController
            joint:        jaco2_joint_5
        j6_pos_controller:
            type:         position_controllers/JointPositionController
            joint:        jaco2_joint_6

    </rosparam>
    
    <!-- NOTE: The spawner hangs when the full launch file is killed, but the
               controller manager is stopped correctly. -->
    <node   name="controller_spawner"
             pkg="controller_manager"
            type="spawner"
          output="screen"
            args="joint_state_controller
                  j1_pos_controller
                  j2_pos_controller
                  j3_pos_controller
                  j4_pos_controller
                  j5_pos_controller
                  j6_pos_controller"
    />

    <node name="robot_state_publisher"
           pkg="robot_state_publisher"
          type="robot_state_publisher"
    />

</launch>

